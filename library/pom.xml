<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>firebase-ui</artifactId>
  <groupId>com.firebaseui</groupId>
  <name>FirebaseUI-Android</name>
  <description>FirebaseUI library for Android applications</description>
  <url>https://github.com/firebase/FirebaseUI-Android</url>
  <version>0.3.1</version>
  <packaging>aar</packaging>
  <scm>
    <url>scm:git@github.com/firebase/FirebaseUI-Android</url>
    <connection>scm:git:git@github.com:firebase/FirebaseUI-Android.git</connection>
    <developerConnection>scm:git:git@github.com:firebase/FirebaseUI-Android.git</developerConnection>
  </scm>
  <licenses>
    <license>
      <name>MIT</name>
      <url>http://firebase.mit-license.org</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>puf</id>
      <name>Frank van Puffelen</name>
      <email>puf@google.com</email>
    </developer>
  </developers>
  <build>
  <plugins>
    <plugin>
      <groupId>com.simpligility.maven.plugins</groupId>
      <artifactId>android-maven-plugin</artifactId>
      <version>4.1.0</version>
      <extensions>true</extensions>
        <configuration>
          <sign>
            <debug>false</debug>
          </sign>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
